    },
    "dependencies":[
        
    ],
    "homepage":"http://k-1.com",
    "icon":"icon.png",
    "maturity":"stable",
    "moduleName":"WindowControl",
    "options":{
        "fields":{
            "rules":{
                "items":{
                    "fields":{
                        "temperature_inside_sensor":{
                            "label":"__temperature_inside_sensor_label__",
                            "fields":{
                                "item":{
                                    "datasource":"namespaces",
                                    "field":"devices",
                                    "optionLabels":"namespaces:devices_sensorMultilevel:deviceName",
                                    "type":"select"
                                }
                            }
                        },
                        "devices":{
                            "label":"__devices_label__",
                            "fields":{
                                "item":{
                                    "datasource":"namespaces",
                                    "field":"devices",
                                    "optionLabels":"namespaces:devices_switchMultilevel:deviceName",
                                    "type":"select"
                                }
                            }
                        }
                    }
                }
            },
            "min_temperature_outside":{
                "label": "__min_temperature_outside_label__",
                "helper": "__min_temperature_outside_helper__"
            },
            "max_wind":{
                "label": "__max_wind_label__",
                "helper": "__max_wind_helper__"
            },
            "thermostat_device":{
                "label":"__thermostat_device_label__",
                "helper":"__thermostat_device_helper__",
                "datasource":"namespaces",
                "field":"devices",
                "enum":"namespaces:devices_thermostat:deviceName",
                "type":"select"
            },
            "rain_sensor":{
                "label":"__rain_sensor_label__",
                "helper":"__rain_sensor_helper__",
                "datasource":"namespaces",
                "field":"devices",
                "enum":"namespaces:devices_sensorMultilevel:deviceName",
                "type":"select"
            }
            "wind_sensor":{
                "label":"__wind_sensor_label__",
